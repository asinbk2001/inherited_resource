<h1>Listing reviews</h1>

<table>
  <tr>
    <th>Rating</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%= review.rating %></td>
    <td><%= review.content %></td>
    <td><%= link_to 'Show', product_review_path(review.product_id, review) %></td>
    <td><%= link_to 'Edit', edit_product_review_path(review.product_id, review) %></td>
    <td><%= link_to 'Destroy', product_review_path(review.product_id, review), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<p> 
  <%= link_to 'View all Products', products_path %> 
</p>
